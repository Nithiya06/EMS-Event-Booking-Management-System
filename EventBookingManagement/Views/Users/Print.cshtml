<link rel="stylesheet" href="/css/site.css" />
<body class="print">
<div class="table">
<h3 class="text-center text-darkblue mb-4">Lists of Users</h3>
	<table class="table-bordered table table-hover">
	<thead class="text-white-50 bg-dark text-center">
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Email</th>
			<th>Password</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				    <td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Email</td>
					<td>@item.Password</td>
					<td class="d-flex flex-row gap-3">
						<a href="#" class="btn btn-info">View Details</a>
				<a href="#" class="btn btn-danger">Delete</a>
					</td>
			</tr>
		}
	</tbody>
</table>
</div>
</body>  