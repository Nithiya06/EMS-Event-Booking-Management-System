@model EventManagementSystem.Models.AdminDashboardViewModel

<h2>Admin Dashboard</h2>

 <div class="row"> 
    <div class="col-md-4"> 
        <div class="card">
            <div class="card-header bg-dark text-white">
                Total Users
            </div>
            <div class="card-body">
                <p class="card-text">@Model.TotalUsers</p>
            </div>
        </div>
      </div> 

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                Total Events
            </div>
            <div class="card-body">
                <p class="card-text">@Model.TotalEvents</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                Total Bookings
            </div>
            <div class="card-body">
                <p class="card-text">@Model.TotalBookings</p>
            </div>
        </div>
    </div>
</div>

<hr />

<h3>Upcoming Events</h3>
<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Date</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model.UpcomingEvents)
        {
            <tr>
                <td>@eventItem.Name</td>
                <td>@eventItem.Date.ToString("MMMM dd, yyyy")</td>
                <td>@eventItem.Location</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a href="@Url.Action("Show", "Event")" class="btn btn-primary">Manage Events</a>
    <a href="@Url.Action("Print", "Users")" class="btn btn-primary">Manage Users</a>
    <a href="@Url.Action("Booking", "Booking")" class="btn btn-primary">View Bookings</a>
</div>
